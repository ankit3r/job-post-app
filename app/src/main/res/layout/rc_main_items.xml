<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#39AAAAAA"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtJobType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:maxLines="1"
            android:padding="5dp"
            android:text="job type"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtJobType"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="1dp"
            android:maxLines="3"
            android:padding="5dp"
            android:text="Cy Name"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCyName"
            android:drawableStart="@drawable/ruppes"
            android:drawablePadding="1dp"
            android:maxLines="1"
            android:padding="5dp"
            android:drawableTint="@color/white"
            android:text="12000-15000/month"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>

